du -s /mnt/data8tb/videos/tv/* /mnt/data8tb/videos/kids_tv/* | jc --du | jq -c 'map(. + {"type": "show"}).[]' >> /var/log/diskusage
du -s /mnt/data8tb/videos/tv/*/* /mnt/data8tb/videos/kids_tv/*/* | jc --du | jq -c 'map(. + {"type": "season"}).[]' >> /var/log/diskusage
