server:
  disable: true

positions:
  filename: /tmp/positions.yaml

clients:
  - url: http://localhost:3100/loki/api/v1/push

scrape_configs:
- job_name: cloudflare_events
  pipeline_stages:
  - json:
      expressions:
        datetime: datetime
        ruleName: description
      drop_malformed: true
  - timestamp:
      source: datetime
      format: RFC3339
  - labels:
      ruleName:
  static_configs:
  - labels:
      job: cloudflare_events
      host: {{ inventory_hostname }}
      __path__: /var/log/cloudflare
- job_name: disk_usage
  pipeline_stages:
  - json:
      expressions:
        path: name
      drop_malformed: true
  - labels:
      path:
      type:
  static_configs:
  - labels:
      job: disk_usage
      host: {{ inventory_hostname }}
      __path__: /var/log/diskusage
- job_name: system
  static_configs:
  - labels:
      job: paperless
      host: {{ inventory_hostname }}
      __path__: /var/log/paperless
  - labels:
      job: calibre
      host: {{ inventory_hostname }}
      __path__: /var/log/calibre
  - labels:
      job: cloud_mirror
      host: {{ inventory_hostname }}
      __path__: /var/log/cloud_mirror
  - labels:
      job: cloud_sync
      host: {{ inventory_hostname }}
      __path__: /var/log/cloud_sync
  - labels:
      job: image_sync
      host: {{ inventory_hostname }}
      __path__: /var/log/imagesync
  - labels:
      job: scrutiny
      host: {{ inventory_hostname }}
      __path__: /var/log/scrutiny  
